//@version=5
// Author: Yoshitaka Ise
// Indicator: EMA Trend
// Version: 1.0.0
// Description: Simple EMA-based trend detection indicator

indicator("EMA Trend v1", overlay=true)

// ===== Inputs =====
shortLen = input.int(20, "Short EMA Length", minval=1)
longLen  = input.int(50, "Long EMA Length", minval=1)

// ===== Calculations =====
emaShort = ta.ema(close, shortLen)
emaLong  = ta.ema(close, longLen)

// ===== Trend Logic =====
isBull = emaShort > emaLong
isBear = emaShort < emaLong

// ===== Plot =====
plot(emaShort, title="EMA Short", color=color.orange)
plot(emaLong, title="EMA Long", color=color.blue)

bgcolor(
     isBull ? color.new(color.green, 90) :
     isBear ? color.new(color.red, 90) : na
)
