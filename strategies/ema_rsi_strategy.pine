// Author: Yoshitaka Ise
// Strategy: EMA + RSI
// Version: 1.0.0

strategy('EMA + RSI Strategy', overlay = true, initial_capital = 100000, default_qty_type = strategy.percent_of_equity, default_qty_value = 10)

// ===== Inputs =====
emaShortLen = input.int(20, 'Short EMA')
emaLongLen = input.int(50, 'Long EMA')
rsiLen = input.int(14, 'RSI Length')

// ===== Indicators =====
emaShort = ta.ema(close, emaShortLen)
emaLong = ta.ema(close, emaLongLen)
rsiValue = ta.rsi(close, rsiLen)

// ===== Entry Conditions =====
longCond = emaShort > emaLong and rsiValue > 50
shortCond = emaShort < emaLong and rsiValue < 50

// ===== Orders =====
if longCond
    strategy.entry('Long', strategy.long)

if shortCond
    strategy.entry('Short', strategy.short)

// ===== Plot =====
plot(emaShort, color = color.orange)
plot(emaLong, color = color.blue)
